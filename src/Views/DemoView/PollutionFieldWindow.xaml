<Window x:Class="DemoView.PollutionFieldWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoView"
        mc:Ignorable="d"
        Title="Хранилище полей" Height="1000" Width="1400" WindowStartupLocation="CenterScreen">
    <!--Фоновое изображение-->
    <Window.Background>
        <ImageBrush ImageSource="Images\image.jpg" Opacity="0.4"/>
    </Window.Background>

    <Grid>
        <!--Прозрачность грида-->
        <Grid.Background>
            <SolidColorBrush Opacity="0.6" Color="White"/>
        </Grid.Background>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.3*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!--Полоса разделения колонок-->
        <Border Grid.Column="1" Grid.RowSpan="1" BorderThickness="1,0" BorderBrush="Gray"/>

        <!--Поля из бд. Левая колонка. Верхняя часть-->
        <StackPanel Grid.Column="0" VerticalAlignment="Top">

            <TextBlock Style="{StaticResource TextBlock}" FontSize="25"
                       HorizontalAlignment="Left" 
                       Margin="20,20,10,0" Text="Дата сохранения поля:"/>
            <!--Комбобокс для выбора даты-->
            <ComboBox Opacity="0.7" Style="{StaticResource ComboBox}" Margin="20,0,10,0" 
                      x:Name="DatePollutionCB" ItemsSource="{Binding Path=Dates}"
                      SelectedItem="{Binding Path=SelectRowDate}" 
                      SelectionChanged="DatePollutionCB_SelectionChanged"/>

            <TextBlock Style="{StaticResource TextBlock}" FontSize="25"
                       HorizontalAlignment="Left" 
                       Margin="20,20,10,0" Text="Название поля:"/>
            <!--Комбобокс для выбора названия-->
            <ComboBox Opacity="0.7" Style="{StaticResource ComboBox}"  Margin="20,0,10,0"
                      x:Name="NamePollutionCB" SelectedItem="{Binding Path=SelectRowName}"
                      ItemsSource="{Binding Path=Names, UpdateSourceTrigger=PropertyChanged}"
                      SelectionChanged="NamePollutionCB_SelectionChanged"/>

            <!--Кнопка "Отобразить поле"-->
            <Button Margin="20,30,10,0" x:Name="VisualPollutionBtn" 
                    Click="VisualPollutionBtn_Click">
                <Button.Content>
                    <TextBlock Style="{StaticResource TextBlock}" FontSize="25"
                               Foreground="Black" Text="Отобразить поле"/>
                </Button.Content>
            </Button>


            <TextBlock Style="{StaticResource TextBlock}"
                       FontSize="25" Margin="20,50,10,0"
                       HorizontalAlignment="Left" Text="Источник:"/>
            <!--В данном текст блоке отображается название источника (модуль)-->
            <TextBlock x:Name="Module" FontSize="25"
                       Style="{StaticResource TextBlock}"
                       HorizontalAlignment="Left" Margin="20,0,10,0"
                       Text="{Binding Path=SoftModules}"/>
        </StackPanel>

        <!--Левая колонка. Нижняя часть-->
        <StackPanel VerticalAlignment="Bottom">
            <!--Кнопка экспорта-->
            <Button Margin="20,0,10,30" x:Name="ExportImageBtn" 
                    Click="ExportImageBtn_Click"  VerticalAlignment="Bottom">
                <Button.Content>
                    <TextBlock Style="{StaticResource TextBlock}"
                               FontSize="25" Foreground="Black" 
                               Text="Экспорт изображения"/>
                </Button.Content>
            </Button>
        </StackPanel>

        <!--Изображение. Правая колонка-->
        <TextBlock Grid.Column="1" FontSize="30" x:Name="PollutionsTB" Text="{Binding Path=LinkImages}"/>
    </Grid>
</Window>